/* pages/detail/index.wxss */
.container {
  height: 100%;
  padding: 0;
  overflow: hidden;
}

.top-box {
  position: fixed;
  width: 100%;
  height: 252rpx;
  z-index: 1;
}

.top-box .title {
  height: 2rem;
  line-height: 2rem;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  background-color: #fff;
}

.conter-content {
  margin-top: 252rpx;
  padding: 0 28rpx;
  overflow: hidden;
}

.tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 28rpx;
  font-size: 24rpx;
}
.tabs .tabs-item {
  padding: 0 28rpx;
  color: #646566;
}
.tabs .active-item {
  position: relative;
  color: #000;
  font-weight: bold;
}
.active-item::after {
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  width: 0;
  height: 0;
  border: 4px solid #000;
  border-top-color: transparent;
  border-right-color: transparent;
  border-left-color: transparent;
}

.player-stats-table {
  min-height: 900rpx;
}