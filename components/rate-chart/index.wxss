/* components/rate-chart/index.wxss */
.rate-chart {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.rate-chart__title {
  width: 100%;
  margin-top: .5em;
  line-height: 1.75em;
  font-size: 20rpx;
  font-weight: bold;
}

.rate-chart__body{
  display: flex;
  width: 100%;
}

.v-progress,
.h-progress {
  flex: 1;
}

.no-radius {
  border-radius: 0;
}